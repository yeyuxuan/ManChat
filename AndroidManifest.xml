<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <!-- 使用权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.Activity.LogInActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.RegisterActivity"
            android:label="@string/RegisterActivityTitle"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.FunctionActivity"
            android:label="@string/title_activity_function"
            android:launchMode="singleTop"
            android:parentActivityName="com.Activity.LogInActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.Activity.LogInActivity" />
        </activity>
        <activity
            android:name="com.Activity.MenuActivity"
            android:label="@string/title_activity_menu"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.PersonalSettings"
            android:label="@string/title_activity_personal_settings"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.Person_Info"
            android:label="@string/title_activity_person__info"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.SendMailActivity"
            android:label="@string/title_activity_send_mail"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.MailBoxActivity"
            android:label="@string/title_activity_mail_box"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.UserNameCard"
            android:label="@string/title_activity_user_name_card" >
        </activity>
        <activity
            android:name="com.Activity.UserInfo"
            android:label="@string/title_activity_user_info" >
        </activity>
        <activity
            android:name="com.Activity.PersonDetial"
            android:label="@string/title_activity_person_detial" >
        </activity>
        <activity
            android:name="com.Activity.PersonDetail"
            android:label="@string/title_activity_person_detail"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.Activity.Welcome"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>